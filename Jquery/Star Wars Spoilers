	<script src="https://code.jquery.com/jquery-1.11.0.min.js" type="text/javascript" charset="utf-8">
  //Hide the spoiler

    $("span").hide();
  
  //Add a button that covers the spoiler that says Click here for a spoiler. (The css has already been written.)
  $("p").append("<button>Click here for a spoiler!</button>");
  
  
//When the user clicks on the button, the warning should hide, and they should see the spoiler!
